# LegiScan API - required for bill tracking 
LEGISCAN_KEY=your_legiscan_api_key_here

# Redis settings - Upstash Redis for production
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Cron protection - required in production
CRON_SECRET=your_cron_secret_for_security

# Quota monitoring alert - Slack/Discord webhook for alerts at 25k queries
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Cache settings (TTL in milliseconds, default: 1 hour)
CACHE_TTL=3600000

# API settings
USE_REAL_API=false

# Next.js settings
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Set to true in development to see API status badge on UI
NEXT_PUBLIC_SHOW_API_STATUS=true

# OpenAI API settings for VBC-GPT
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini
EMBED_CHUNK_TOKENS=900